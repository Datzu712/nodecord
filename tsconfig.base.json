{
    "compilerOptions": {
          "module": "CommonJS",
          "moduleResolution": "node",
          "declaration": true,
          "sourceMap": false,
          "emitDecoratorMetadata": true,
          "experimentalDecorators": true,
          "useUnknownInCatchVariables": false,
          "removeComments": true,
          "target": "ES2021",
          "forceConsistentCasingInFileNames": true,
          "esModuleInterop": true,
          "strict": true,
          "allowJs": true,
          "skipLibCheck": true,
          "paths": {
              "@nodecord/core": ["./packages/core"],
              "@nodecord/core/*": ["./packages/core/*"],
              "@nodecord/djs-adapter": ["./packages/djs-adapter"],
              "@nodecord/djs-adapter/*": ["./packages/djs-adapter/*"],
          },
      },
      "exclude": ["node_modules", "**/*.spec.ts"],
  }