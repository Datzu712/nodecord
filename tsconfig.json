{
  "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "useUnknownInCatchVariables": false,
        "removeComments": true,
        "target": "ES2021",
		"forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "strict": true,
        "paths": {
            "@nodecord/core": ["./packages/core"],
            "@nodecord/core*": ["./packages/core/*"],
            "@nodecord/common*": ["./packages/common/*"],
            "@nodecord/common": ["./packages/common"],
        }
    }
}