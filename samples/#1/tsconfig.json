{
    "compilerOptions": {
      "module": "CommonJS",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2021",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "skipLibCheck": true,
      "lib": ["ES2021"],
      "esModuleInterop": true,
      "paths": {
        "@nodecord/core": ["../../packages/core"],
        "@nodecord/core/*": ["../../packages/core/*"],
      },
    },
    "include": ["src/**/*"],
    "ts-node": {
        "files": true,
        "require": ["tsconfig-paths/register"]
    },
}